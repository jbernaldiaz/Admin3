{% extends 'base.html.twig' %}

{% block body %}
	{{ parent() }}

	{{ include('IPNJAdminBundle:Envios:mensajes/success.html.twig') }}
	{{ include('IPNJAdminBundle:Envios:mensajes/danger.html.twig') }}

<div class="container">
				<div class="row well">

		<div class="col-md-12">
			<div class="page-header margin-none">
				<h3 class="padding-none"> Envios de las iglesias de la zona {{ zonaUser }} </h3>
			</div>




			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							
							<th>Iglesia</th>
							<th>Mes</th>
							<th>Anio</th>
							<th>Operacion</th>
							<th>Cajero</th>
							<th>Total</th>
							<th>Fecha Deposito</th>
							<th>Detalle Enviado</th>
							<th>Acciones</th>
						</tr>
					</thead>
					<tbody>
						{% for envio in envio %}

						<tr>
							
							<td>{{ envio.iglesia }}</td>
							<td>{{ envio.mes }}</td>
							<td>{{ envio.anio|date('Y') }}</td>
							<td>{{ envio.operacion }}</td>
							<td>{{ envio.cajero }}</td>
							<td>{{ envio.total }}</td>
							<td>{{ envio.fechaAt|date('d-m-Y') }}</td>
							<td>{{ envio.createAt|date('d-m-Y  -  H:i') }}</td>

								<td class="action">
									<a href="{{ path('ipnj_envios_view', { id: envio.id }) }}" class="btn btn-sm btn-info">Ver</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
{% endblock %}
