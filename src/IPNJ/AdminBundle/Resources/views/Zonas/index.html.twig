{% extends 'base.html.twig' %}

{% block body %}
	{{ parent() }}
		<div class="container">
			<div class="row well">
				<div class="page-header margin-none" >	
					<h2 class="padding-none" style="float:left;"> Zonas o Distritos</h2>
				</div>
				<div class="col-md-3">
					<div class="table-responsive">
						<div class="table-responsive">
							<table class="table table-striped table-hover">
								<thead>
									<tr>
										<th>Zonas</th>
									</tr>
								</thead>
								<tbody>
									{% for zona in zona %}
										<tr>
											<td>{{ zona }}</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
							 {% if is_granted('ROLE_ADMIN') %}
							<a href="{{ path('ipnj_zonas_add') }}" class="btn btn-sm btn-info">Agregar Zona</a>
							 {% endif %}
							<a href="{{ path('ipnj_iglesias_list') }}" class="btn btn-sm btn-info">Regresar</a>
						</div>
					</div>
				</div>
			</div>
		</div>
{% endblock %}
