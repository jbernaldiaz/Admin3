{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
	<div class="main container">
		<div class="row well">
			{{ form_start(form, { 'attr' : {'novalidate': 'novalidate', 'role' : 'form'} }) }}
				<div class="page-header">
					<h2>Agregar Iglesia o Usuario</h2>
				</div>
                
            <div class="col-md-3">

				<div class="form-group">
			        {{ form_label(form.iglesia, 'Iglesia o Usuario') }}
			        {{ form_widget(form.iglesia, {'attr': {'class': 'form-control', 'placeholder' : 'Nueva Registro de Iglesia'}}) }}
			        <span class="text-danger">{{ form_errors(form.iglesia) }}</span>
			    </div>

				<div class="form-group">
			        {{ form_label(form.username) }}
			        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder' : 'usuario'}}) }}
			        <span class="text-danger">{{ form_errors(form.username) }}</span>
			    </div>
				
				<div class="form-group">
			        {{ form_label(form.password) }}
			        {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder' : 'Nuevo password'}}) }}
			        <span class="text-danger">{{ form_errors(form.password) }}</span>
			    </div>

                <div class="form-group">
			        {{ form_label(form.role) }}
			        {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
			        <span class="text-danger">{{ form_errors(form.role) }}</span>
			    </div>

				<div class="form-group">
			        {{ form_label(form.zona) }}
			        {{ form_widget(form.zona, {'attr': {'class': 'form-control'}}) }}
			        <span class="text-danger">{{ form_errors(form.zona) }}</span>
			    </div>
			    <div class="checkbox">
				    <label>
						{{ form_widget(form.isActive) }}{% trans %}Active{% endtrans %}
						<span class="text-danger">{{ form_errors(form.isActive) }}</span>
				    </label>
				</div>
		    <p><br />
		        {{ form_widget(form.save, {'label' : 'Agregar Usuario', 'attr': {'class': 'btn btn-success'}}) }}
		    </p>
			</div>
		    
		    	
               
        
                {{ form_end(form) }}
			
		</div>
	</div>
{% endblock %}